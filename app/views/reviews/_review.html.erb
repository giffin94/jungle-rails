<div class="row"> 
      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>User:</dt>
          <dd><%= review.user_id %></dd>
          <dt>Comments:</dt>
          <dd><%= review.description %></dd>
          <dt>Rating:</dt>
          <dd>
            <% review.rating.times do %>
              *
            <% end %>
          </dd>
          <dt>Date:</dt>
          <dd><%= review.created_at.strftime('%D') %></dd>
          <% if author_current?(review) %>
            <dt>Delete:</dt>
            <dd>
              <%= link_to fa_icon('trash'), [@product, review], method: :delete %>
            </dd>
          <% end %>
        </dl>

      </div>
      
</div>
